<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
   <web-app>
      <display-name>EjemploServlet</display-name>
      <description>Ejemplo Servlet</description>
      <servlet>
         <servlet-name>miServlet</servlet-name>
         <description>Mi Servlet</description>
         <servlet-class>servlet.Servlet</servlet-class>
      </servlet>
      <servlet>
         <servlet-name>goToGet</servlet-name>
         <description>Mi HTML de respuesta a GET</description>
         <jsp-file>/get.html</jsp-file>
      </servlet>
      <servlet>
         <servlet-name>goToPost</servlet-name>
         <description>Mi HTML de respuesta a POST</description>
         <jsp-file>/post.html</jsp-file>
      </servlet>
      <servlet-mapping>
         <servlet-name>miServlet</servlet-name>
         <url-pattern>/Servlet</url-pattern>
       </servlet-mapping>
      <welcome-file-list>
          <welcome-file>index.html</welcome-file>
      </welcome-file-list>
   </web-app>